<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnCreateCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ders Oluştur"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnMyCourses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Derslerim"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateCourse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Çıkış"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnMyCourses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
